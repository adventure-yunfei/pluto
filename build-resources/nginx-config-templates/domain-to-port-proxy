{{!
变量: by_domain, by_port, has_websocket
}}

server {
    listen      80;
    server_name {{&by_domain}};
    location / {
        proxy_pass http://localhost:{{by_port}}/;
        {{#has_websocket}}
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        {{/has_websocket}}
    }
}
