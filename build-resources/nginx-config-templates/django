{{!
变量: by_port, root
}}

upstream django {
    server unix:{{&root}}/djproj.sock; # for a file socket
    # server 127.0.0.1:8001; # for a web port socket
}

server {
    listen      {{by_port}} default_server;
    charset     utf-8;

    location /static {
        alias {{&root}}/static;
    }

    location / {
        uwsgi_pass  django;
        include     uwsgi_params;
    }
}
